<Page x:Class="IMS.Client.WPF.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.Client.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="1020" d:DesignWidth="1840"
      Title="SettingPage">

    <Grid>
        <Rectangle x:Name="SubMenu" Fill="#FFF4F4F5" HorizontalAlignment="Left" Stroke="Black" Width="120"/>
        <Button x:Name="button_error_popup_save_time" Content="고장 팝업 저장 시간" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Click="button_error_popup_save_time_Click"/>
        <Button x:Name="button_data_save_time" Content="데이터 저장 시간 설정" HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" Width="120" Click="button_data_save_time_Click"/>
        <Frame x:Name="MainFrame" Content="" Margin="120,0,0,0"/>
        <Button x:Name="button_special_event" Content="스페셜 이벤트" HorizontalAlignment="Left" Margin="0,40,0,0" VerticalAlignment="Top" Width="120" Click="button_special_event_Click"/>
    </Grid>
</Page>
