<Page x:Class="IMS.Client.WPF.UPSManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.Client.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="1020" d:DesignWidth="1680"
      Title="UPSManagePage">

    <Grid>
        <DataGrid x:Name="UPSList" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="사용 여부" Binding="{Binding isUsing}"/>
                <DataGridTextColumn Header="장비 번호" Binding="{Binding upsID}"/>
                <DataGridTextColumn Header="그룹 번호" Binding="{Binding groupNumber}"/>
                <DataGridTextColumn Header="장비 명칭" Binding="{Binding upsName}"/>
                <DataGridTextColumn Header="짝" Binding="{Binding partnerIDs}"/>
                <DataGridTextColumn Header="분전반" Binding="{Binding panelID}"/>
                <DataGridTextColumn Header="사양" Binding="{Binding batteryDescription}"/>
                <DataGridTextColumn Header="용량" Binding="{Binding batteryCapacity}"/>
                <DataGridTextColumn Header="IP 주소" Binding="{Binding ip}"/>
                <DataGridTextColumn Header="설치일" Binding="{Binding installDate}"/>
                <DataGridTextColumn Header="좌표" Binding="{Binding coordinate}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
