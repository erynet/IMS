<Page x:Class="IMS.Client.WPF.GroupManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.Client.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="1020" d:DesignWidth="1680"
      Title="GroupManagePage">

    <Grid>
        <DataGrid x:Name="UPSList" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="사용" Binding="{Binding isUsing}"/>
                <DataGridTextColumn Header="그룹 번호" Binding="{Binding groupNumber}"/>
                <DataGridCheckBoxColumn Header="그룹 화면 표시" Binding="{Binding isGroupVisible}"/>
                <DataGridTextColumn Header="그룹 명칭" Binding="{Binding groupName}"/>
                <DataGridCheckBoxColumn Header="그룹 개별 장비 사용" Binding="{Binding isSeparatesyUseable}"/>
                <DataGridTextColumn Header="좌표" Binding="{Binding coordinate}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
